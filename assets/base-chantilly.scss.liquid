html {
    font-size: 62.5%;
    line-height: 24px;

}

* {
    font-size: inherit;
}



body {
    font-size: 1.5rem;
    color: #707173;
    font-family: "Jost", system-ui, -apple-system, "Segoe UI", Roboto,
    "Helvetica Neue", "Noto Sans", "Liberation Sans", Arial, sans-serif,
    "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
}

input, input.form-control, select.form-select, .form-select option {
    font-size: 1.5rem;
}

button {
    font-size: 1.5rem;
    line-height: 1rem;
}

.chantilly-product-card {
  > .card__content {
    .card__information {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

      .card__heading > a::after {
        z-index: -1;
      }
    }
  }

  .product-image-container {
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;

    .product-img {
      visibility: hidden;
      opacity: 0;
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      object-fit: cover;
      object-position: center;

      transition: all 0.15s linear;

      &.active {
        opacity: 1;
        visibility: visible;
      }
    }

    .change-img-btn {
      position: absolute;
      font-size: 2.5rem;
      top: 50%;
      z-index: 10;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      &.prev {
        left: 4%;
        transform: translateY(-50%) rotate(180deg);
      }
      &.next {
        right: 4%;
        transform: translateY(-50%);
      }
    }
  }

  .product-colors {
    display: flex;
    align-items: center;
    justify-content: center;

    gap: 1rem;
  }

  .color-choosen-point {
    width: 24px;
    height: 24px;
    position: relative;
    z-index: 1;
    overflow: hidden;
    border-radius: 50%;
    transition: transform linear 0.2s;

    &:hover {
      border: 1px solid gray;
    }

    &.active {
      border: 1px solid gray;
    }

    > img {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 80%;
      height: 80%;
      object-fit: cover;
      object-position: center;
    }
  }
}

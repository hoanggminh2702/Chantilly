  text-transform: capitalize;
}

.block {
  display: block;
}

.hidden {
  display: none;
}

.ratio-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.ratio-absolute-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

  object-fit: cover;
  object-position: center;
}

.home-collection-container {
  &.desktop {
    @media (min-width: 320px) {
      display: none;
    }
    @media (min-width: 768px) {
      display: block;
    }
  }

  &.mobile {
    @media (min-width: 320px) {
      display: block;
    }
    @media (min-width: 768px) {
      display: none;
    }
  }
  padding: 2rem 1rem;

  .home-collection-row {
    margin-left: -1.5rem;
    margin-right: 1.5rem;
    > .col {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
  }
}
.collection-card-wrapper {
  position: relative;
  width: 100%;
  padding-top: 160%;
  a.btn {
    white-space: nowrap;
  }

  a.collection-link {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 1.4rem;
    padding: 1rem 1.2rem;
  }
  .card-img-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;

    .card-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
  }
}

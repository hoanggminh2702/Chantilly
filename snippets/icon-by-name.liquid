{% case icon_name %}
  {% when 'arrow' %}
    {% render 'chantilly-arrow-icon' %}
  {% when 'black_star' %}
    {% render 'chantilly-black-star-icon' %}
  {% when 'gift' %}
    {% render 'chantilly-gift-icon' %}
  {% when 'star' %}
    {% render 'chantilly-star-icon' %}
  {% when 'tag' %}
    {% render 'chantilly-tag-icon' %}
  {% when 'truck' %}
    {% render 'chantilly-truck-icon' %}
  {% when 'facebook' %}
    {% render 'icon-facebook' %}
  {% when 'instagram' %}
    {% render 'icon-instagram' %}
  {% when 'youtube' %}
    {% render 'icon-youtube' %}
  {% when 'remove' %}
    {% render 'icon-remove' %}
  {% when 'tiktok' %}
    {% render 'icon-tiktok' %}
  {% when 'vimeo' %}
    {% render 'icon-vimeo' %}
